   (pps ppx_sledge ppx_trace))))

(dirs :standard \ test)

(vendored_dirs vendor)

(rule
 (targets sledge-help.txt)
 (deps
  tools/gen_help.sh
  cli/sledge_cli.exe
  (env_var SLEDGE_CONFIG))
 (action
  (with-stdout-to
   sledge-help.txt
   (run tools/gen_help.sh)))
 (mode promote))
