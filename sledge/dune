(subdir
 cli
 (executable
  (name sledge_cli)
  (public_name sledge)
  (package sledge)
  (libraries apron apron.boxMPQ core ctypes ctypes.foreign dune-build-info
    llvm llvm.analysis llvm.bitwriter llvm.ipo llvm.irreader llvm.linker
    llvm.passmgr_builder llvm.scalar_opts llvm.target memtrace shexp.process
    yojson trace nonstdlib sledge smtlib-utils)
