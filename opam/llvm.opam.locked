opam-version: "2.0"
name: "llvm"
version: "20-static-infer"
synopsis: "The OCaml bindings distributed with LLVM"
description: "Note: LLVM should be installed first."
maintainer: "Alan <ahulambda@gmail.com>"
authors: ["whitequark <whitequark@whitequark.org>" "The LLVM team"]
license: "MIT"
homepage: "http://llvm.org"
doc: "http://llvm.org"
bug-reports: "http://llvm.org/bugs/"
depends: [
  "base-bigarray" {= "base"}
  "base-domains" {= "base"}
  "base-nnp" {= "base"}
  "base-threads" {= "base"}
  "base-unix" {= "base"}
  "bigarray-compat" {= "1.1.0"}
  "conf-bash" {= "1"}
  "conf-cmake" {= "1"}
  "conf-libffi" {= "2.0.0"}
  "conf-llvm-static" {= "20"}
  "conf-pkg-config" {= "4"}
  "csexp" {= "1.5.2"}
  "ctypes" {= "0.23.0"}
  "ctypes-foreign" {= "0.23.0"}
  "dune" {= "3.17.2"}
  "dune-configurator" {= "3.17.2"}
  "integers" {= "0.7.0"}
  "ocaml" {= "5.2.1"}
  "ocaml-config" {= "3"}
  "ocaml-option-flambda" {= "1"}
  "ocaml-variants" {= "5.2.1+options"}
  "ocamlfind" {= "1.9.8"}
  "stdlib-shims" {= "0.3.0"}
]
build: [
  "bash"
  "-ex"
  "install.sh"
  "build"
  "--llvm-config"
  "%{conf-llvm-static:config}%"
  "--libdir"
  lib
  "--cmake"
  "%{conf-cmake:cmd}%"
  "--make"
  make
  "--link-mode"
  "static"
  "--use-homebrew" {os-distribution = "homebrew"}
]
install: [
  "bash"
  "-ex"
  "install.sh"
  "install"
  "--llvm-config"
  "%{conf-llvm-static:config}%"
  "--libdir"
  lib
  "--cmake"
  "%{conf-cmake:cmd}%"
  "--make"
  make
  "--link-mode"
  "static"
  "--use-homebrew" {os-distribution = "homebrew"}
]
dev-repo: "git+http://llvm.org/git/llvm.git"
